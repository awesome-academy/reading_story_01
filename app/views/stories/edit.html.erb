<div class="row mt-3 mb-5">
  <div class="col-md-4 p-3">
    <div id="form_story">
      <h3><%= t ".story_information" %></h3>
      <%= link_to t(".edit_story"), edit_story_path(@story), class: "btn btn-primary", role: "button", remote: true %>
      <%= link_to t(".delete_story"), @story, method: :delete,
        data: {confirm: t(".are_you_sure")}, class: "btn btn-danger", role: "button" %>
      <p class="mt-3"><strong><%= t ".name_story" %>:</strong> <%= @story.name %></p>
      <p><strong><%= t ".author" %>:</strong> <%= @story.author_name %></p>
      <p><strong><%= t ".category" %>:</strong> <%= @story.category_info %></p>
      <%= image_tag @story.cover_image.url if @story.cover_image? %>
      <p class="mt-3"><strong><%= t ".description" %></strong></p>
      <p><%= @story.description %></p>
    </div>
    <div>
      <h3><%= t ".list_chapter" %></h3>
      <ul id="chapters_item">
        <%= render @chapters %>
      </ul>
      <%= link_to t(".add_chapter"), new_chapter_path(story_id: @story.id),
        class: "btn btn-primary", role: "button", remote: true %>
    </div>
  </div>
  <div class="col-md-8 p-3" id="form_chapter"></div>
</div>
