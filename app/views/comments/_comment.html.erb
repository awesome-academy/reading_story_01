<li id="comment-<%= comment.id %>">
  <%= link_to gravatar_for(comment.user, size: Settings.size_gravatar), comment.user %>
  <span class="user"><%= link_to comment.user.name, comment.user %></span>
  <span class="content"><%= comment.content %></span>
  <span class="timestamp">
    <%= t "commented" %> <%= time_ago_in_words comment.created_at %> <%= t "ago" %>
    <% if comment.user.current_user? current_user %>
      <%= link_to t("delete"), comment, method: :delete, class: "ml-3 mb-5",
        data: {confirm: t("you_sure")} %>
    <% end %>
  </span>
</li>
